<script>
    $("#weather").load("https://forecast-v3.weather.gov/point/38.9588,-94.624?view=plain", function (response, status, xhr) {
        if (status == "error") {
            var msg = "Sorry but there was an error: ";
            $("#error").html(msg + xhr.status + " " + xhr.statusText);
        }
    });
</script>

<div style="margin: 0 auto; width:100%; height:400px;">
    <object type="text/html" data="https://forecast-v3.weather.gov/point/38.9588,-94.624?view=plain"
            style="width:100%; height:100%; margin:1%;"></object>
</div>


<script language="javascript">

    $.ajax({
        type: "GET",
        url: "https://forecast-v3.weather.gov/point/38.9588,-94.624?view=plain",
    }).done(function (data) {
        $("#weather").load(JSON.stringify(data))
    });
</script>
